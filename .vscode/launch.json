    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI (Uvicorn) Debug",
            "request": "launch",
            "type": "debugpy",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/back",
            "args": [
                "agent.main:app",
                "--host", "0.0.0.0",
                "--port", "3002",
                "--reload"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "FastAPI Message-Agent Debug",
            "request": "launch",
            "type": "debugpy",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/back/message-agent",
            "args": [
                "main:app",
                "--host", "0.0.0.0",
                "--port", "3008",
                "--reload"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "FastAPI Tool Agent Debug",
            "request": "launch",
            "type": "debugpy",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/back/tool-agent",
            "args": [
                "main:app",
                "--host", "0.0.0.0",
                "--port", "3004",
                "--reload"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
    ]
}